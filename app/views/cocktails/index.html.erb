<body>
  <div class="banner" style="background-image: linear-gradient(#071013 25%, #1D2528 50%)">
    <div class="banner-content">
      <h1>Cockatoo</h1>
      <P>Your personal cocktail library</P>
    </div>
  </div>
  <div class="cocktails-container">
    <div class="container">
      <div class="row">
        <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <div class="cocktail-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path cocktail.image %>');">
           <h2><%= link_to cocktail.name, cocktail %></h2>
         </div>
       </div>
       <% end %>
     </div>
   </div>
 </div>
 <div class="form-create">
  <h2> Create your own </h2>
  <br>
  <%= simple_form_for [@cocktail] do |f| %>
  <div class="name">
    <%= f.input :name %>
  </div>
  <div class="btn btn-submit">
    <%= f.button :submit %>
  </div>
  <% end %>
</div>
</body>
